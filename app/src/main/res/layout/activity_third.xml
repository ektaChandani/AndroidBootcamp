<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">


    <include android:id="@+id/customToolbar"
        layout="@layout/custom_toolbar"/>

    <ImageView
        android:id="@+id/imgView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customToolbar"
        android:scaleType="fitXY"
        android:src="@drawable/menu1"
        android:contentDescription="@string/my_image" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView1"
        android:layout_marginStart="20dp"
        android:text="@string/ice_cream_sundae"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginStart="20dp"
        android:text="@string/_145_mall_of_india"
        android:layout_marginTop="4dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:numStars="5"
        android:progressTint="#F44336"
        android:rating="3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleTextView"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_toEndOf="@id/ratingBar"
        android:gravity="center_vertical"
        android:text="@string/_520_reviews"
        android:layout_marginStart="20dp"/>

</RelativeLayout>